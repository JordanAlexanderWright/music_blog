<% if @article.errors.any? %>
  <h2>The following error(s) occurred:</h2>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<div class="formWrapper my-10">
  <%= form_with(model: @article, local: true) do |form| %>

  <div class="field mx-10">
    <%= form.label :title, "Title"%>
    <%= form.text_field :title, class: "block border border-grey-light w-80 p-3 rounded mb-4 "%>
  </div>


  <div class="field mx-10">
    <%= form.label :description, "Description"%>
    <%= form.text_area :description, class: "block border border-grey-light w-80 p-3 rounded mb-4"%>
  </div>


  <div class="field mx-10">
    <%= form.label :body, "Body"%>
    <%= form.text_area :body, class: "block border border-grey-light w-80 p-3 rounded mb-4"%>
  </div>

  <%= form.submit class: 'btn block border cursor-pointer mx-10'%> 
  <% end %>
</div>
