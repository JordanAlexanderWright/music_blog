<h1>Articles Listing</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <a href="articles/ <%= article.id %>"><%= article.title %></a>
          </td>
          <td><%= article.description %></td>
          <td><%= button_tog 'Delete', article_path(article), method: :delete %><td>
        </tr>
      <% end %>
    </tbody>
  </table>

